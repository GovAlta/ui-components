{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}",
    "labels": {
      "template": "${NAME}-template",
      "app": "${NAME}"
    }
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "labels": {
          "build": "${NAME}-build",
          "app": "${NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Docker"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "resources": {
          "limits": {
            "cpu": "500m",
            "memory": "1Gi"
          },
          "requests": {
            "cpu": "50m",
            "memory": "16Mi"
          }
        },
        "source": {
          "contextDir": "agent-nodejs-12",
          "git": {
            "uri": "https://github.com/openshift/jenkins.git"
          },
          "type": "Git"
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "annotations": {
          "slave-label": "node12"
        },
        "labels": {
          "role": "jenkins-slave",
          "app": "${NAME}"
        },
        "name": "${NAME}"
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "jenkins-agent-node12"
    }
  ]
}
