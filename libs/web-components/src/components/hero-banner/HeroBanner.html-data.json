    {
      "name": "heading",
      "type": "string",
      "description": "Main heading text"
    },
    {
      "name": "backgroundurl",
      "type": "string",
      "description": "Background image url"
    },
    {
      "name": "minheight",
      "type": "string",
      "description": "Sets the height of the HeroBanner",
