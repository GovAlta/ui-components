    },
    {
      "name": "maxcontentwidth",
      "default": "100%",
      "description": "Maximum width of the content area",
      "type": "string"
    },
    {
      "name": "backgroundcolor",
      "type": "string",
      "description": "Background color for the hero banner"
    },
    {
      "name": "textcolor",
      "type": "string",
      "description": "Content color within hero banner"
    }
  ],
  "references": [
    {
      "name": "GoA Hero Banner",
      "url": "{{siteUrl}}/?path=/docs/components-hero-banner--basic"
